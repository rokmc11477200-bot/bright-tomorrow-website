<svg xmlns="http://www.w3.org/2000/svg" width="500" height="300" viewBox="0 0 500 300">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f8fafc;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#e2e8f0;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="500" height="300" fill="url(#bg)"/>
  
  <!-- 노트북 프레임 -->
  <rect x="50" y="50" width="400" height="250" fill="#374151" rx="8"/>
  <rect x="60" y="60" width="380" height="230" fill="#1f2937" rx="4"/>
  
  <!-- 화면 내용 -->
  <rect x="70" y="70" width="360" height="210" fill="#ffffff" rx="2"/>
  <text x="250" y="120" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" fill="#3b82f6" font-weight="bold">밝은내일 웹</text>
  <text x="250" y="150" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" fill="#1a1a1a">브랜드를 닮은 커스터마이징</text>
  <text x="250" y="180" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="#6b7280">템플릿의 속도와 맞춤의 디테일</text>
  
  <!-- 버튼들 -->
  <rect x="150" y="200" width="100" height="40" fill="#3b82f6" rx="6"/>
  <text x="200" y="225" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="#ffffff">견적 받기</text>
  <rect x="270" y="200" width="100" height="40" fill="#f8fafc" stroke="#e2e8f0" stroke-width="2" rx="6"/>
  <text x="320" y="225" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="#1a1a1a">포트폴리오</text>
</svg>
